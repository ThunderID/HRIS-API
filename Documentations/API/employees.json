swagger: '2.0'
info:
  title: Employee API
  description: Move your app forward with the Employee API
  version: 1.0.0
host: localhost:9000
schemes:
  - https
basePath: /v1
produces:
  - application/json
paths:
  /employees:
    get:
      summary: Employee Lists
      description: |
        The employees endpoint returns information about the *HRIS* employees.
      parameters:
        - name: access_token
          in: query
          description: Access token given by apps.
          required: true
          type: string
          format: string
        - name: search
          in: query
          description: search parameter (look below).
          required: false
          type: array
          items:
            type: string
        - name: skip
          in: query
          description: How many records are going to be skipped
          required: false
          type: number
          format: integer
        - name: take
          in: query
          description: How many records are going to be taken from resource
          required: false
          type: number
          format: integer
      tags:
        - employees
      responses:
        '200':
          description: An array of employees' data
          schema:
            type: array
            items:
              $ref: '#/definitions/employees'
        default:
          description: Unexpected error
          schema:
            $ref: '#/definitions/Error'
  /employee/store:
    post:
      summary: Store an employee
      description: >
        Store an employee with details those are contacts, works, private documents, marital statuses
      parameters:
        - name: access_token
          in: query
          description: Access token given by apps.
          required: true
          type: number
          format: integer
        - name: id
          in: query
          description: Let it null for new employee.
          required: true
          type: number
          format: double
        - name: name
          in: query
          description: employee name.
          required: true
          type: string
          format: string
        - name: uniqid
          in: query
          description: Must be unique.
          required: true
          type: string
          format: string
        - name: prefix_title
          in: query
          description: prefix title of employee.
          required: false
          type: string
          format: string
        - name: suffix_title
          in: query
          description: suffix title of employee.
          required: false
          type: string
          format: string
        - name: place_of_birth
          in: query
          description: place where employee was born.
          required: false
          type: string
          format: string
        - name: date_of_birth
          in: query
          description: in format Y-m-d H:i:s.
          required: false
          type: string
          format: string
        - name: gender
          in: query
          description: in male or female.
          required: false
          type: string
          format: string
        - name: username
          in: query
          description: must be unique and follow the rule.
          required: true
          type: string
          format: string
        - name: avatar
          in: query
          description: url of avatar.
          required: false
          type: string
          format: string
        - name: maritalstatusses
          in: query
          description: Must be array of employees' marital status.
          required: false
          type: array
          items:
            type: string
        - name: careers
          in: query
          description: Must be array of employees' career.
          required: true
          type: array
          items:
            type: string
        - name: workexperiences
          in: query
          description: Must be array of employees' work experience from other company.
          required: false
          type: array
          items:
            type: string
        - name: contacts
          in: query
          description: Must be array of employees' contact.
          required: false
          type: array
          items:
            type: string
        - name: privatedocuments
          in: query
          description: Must be array of employees' private document and detail (look below).
          required: false
          type: array
          items:
            type: string
      tags:
        - employees
      responses:
        '200':
          description: An array of employee
          schema:
            type: array
            items:
              $ref: '#/definitions/employee'
        default:
          description: Unexpected error
          schema:
            $ref: '#/definitions/Error'
  /employee/id/:
    get:
      summary: Employee Detail
      description: 'Get employee detail information.'
      parameters:
        - name: id
          in: query
          description: employee id.
          required: true
          type: number
          format: integer
        - name: access_token
          in: query
          description: Access token given by apps.
          required: true
          type: number
          format: integer
      tags:
        - employees
      responses:
        '200':
          description: employee rich data
          schema:
            type: array
            items:
              $ref: '#/definitions/employee'
        default:
          description: Unexpected error
          schema:
            $ref: '#/definitions/Error'
  /employee/delete/id/:
    delete:
      summary: Delete an employee
      description: 'Get employee detail information.'
      parameters:
        - name: id
          in: query
          description: employee id.
          required: true
          type: number
          format: integer
        - name: access_token
          in: query
          description: Access token given by apps.
          required: true
          type: number
          format: integer
      tags:
        - employees
      responses:
        '200':
          description: employee rich data
          schema:
            type: array
            items:
              $ref: '#/definitions/employee'
        default:
          description: Unexpected error
          schema:
            $ref: '#/definitions/Error'
